<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".signup">

    <TextView
        android:id="@+id/Ltitle"
        android:layout_width="243dp"
        android:layout_height="45dp"
        android:layout_margin="40dp"
        android:text="face_recogniser"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/LimageView"
        android:layout_width="88dp"
        android:layout_height="46dp"
        android:layout_below="@+id/Ltitle"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="15sp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/Lemail"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email Address"
        android:layout_below="@+id/LimageView"
        android:layout_centerHorizontal="true"
        android:layout_margin="20sp"
        />

    <EditText
        android:id="@+id/LPassword"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Lemail"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:hint="Password"
        android:autofillHints="Password"
        android:ems="10"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="100sp"
        android:layout_below="@+id/LPassword"
        />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_below="@id/LPassword"
        android:layout_toRightOf="@id/login"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="40sp"/>

    <Button
        android:id="@+id/LSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_below="@id/login"
        android:layout_marginTop="40sp"
        android:onClick="signup"/>
</RelativeLayout>